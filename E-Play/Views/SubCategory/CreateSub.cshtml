@model E_Play.Data.SubCategory

@{
    ViewData["Title"] = "CreateSub";
}

<h1>CreateSub</h1>

<h4>SubCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSub">
